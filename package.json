{
  "name": "server-rendered-react-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "./node_modules/.bin/cross-env NODE_ENV=development webpack -p --progress --watch --config webpack.config.babel.js",
    "server": "NODE_ENV=development node server.js",
    "build": "./node_modules/.bin/cross-env NODE_ENV=production webpack -p --progress --config webpack.config.babel.js",
    "prod": "npm run build && ./node_modules/.bin/forever start server.js",
    "test": "jest --env=jsdom --setupTestFrameworkScriptFile=raf/polyfill"
  },
  "repository": "https://github.com/YPCrumble/server-rendered-react-app.git",
  "author": "YPCrumble",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "axios-mock-adapter": "^1.10.0",
    "cross-env": "^3.2.3",
    "css-loader": "^0.26.2",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.3",
    "enzyme-to-json": "^3.2.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "expect": "^1.20.2",
    "express": "^4.15.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "import-export": "^1.0.1",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "node-sass": "^4.5.2",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-stage-3": "^6.24.1",
    "bluebird": "^3.5.0",
    "axios": "^0.16.1",
    "bootstrap": "^3.3.7",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.5.6",
    "forever": "^0.15.3",
    "jquery": "^3.2.1",
    "memory-cache": "^0.1.6",
    "moment": "^2.18.1",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-cookie": "1.0.4",
    "react-datetime": "^2.9.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "react-select": "^1.0.0-rc.4",
    "redux": "^3.6.0",
    "redux-api": "^0.9.17",
    "redux-thunk": "^2.2.0",
    "webpack-manifest-plugin": "^1.3.2"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/(*.)(spec|test).js?(x)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__tests__/__mock__/files.js"
    }
  }
